<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LessonsTimer.MainPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Settings" IconImageSource="Image/settings.svg" Clicked="SettingsClicked" />
    </ContentPage.ToolbarItems>
    
    

    <ScrollView>

        <StackLayout>

            <Frame CornerRadius="30" BackgroundColor="#584D6F" HorizontalOptions="Center" Margin="-210,20,0,5">
                <Label HorizontalTextAlignment="Center" TextColor="White" Text="Сьогодні" Margin="0,-15,0,0" />
            </Frame>

            <Frame CornerRadius="40" BackgroundColor="#BBA3EF" Margin="20,-30,20,0">
                <VerticalStackLayout>
                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Label x:Name="startEnd" Text="До кінця " />
                        <Label x:Name="mainNameLesson" Text=" " />
                        <Label x:Name="leftLabel" Text="залишилось:" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Label x:Name="mainEndLesson" FontSize="60"></Label>
                        <Label x:Name="hourOrMinutes" Margin="0,50,0,0">хв.</Label>
                    </HorizontalStackLayout>
                </VerticalStackLayout>

            </Frame>

            <HorizontalStackLayout x:Name="NextLessonsTab" Margin="0,0,0,0" HorizontalOptions="Center" IsVisible="false">
                <Frame CornerRadius="30" BackgroundColor="#D29292" HorizontalOptions="Center" Margin="0,10,0,-25">
                    <Label HorizontalTextAlignment="Center" TextColor="Black" Text="Наступні пари" Margin="0,-15,0,0" />
                </Frame>
            </HorizontalStackLayout>

            <Frame x:Name="TodayL1" CornerRadius="40" BackgroundColor="#BBA3EF" Margin="20,5,20,0" IsVisible="false">
                <HorizontalStackLayout Spacing="5" x:Name="NextL1">
                    <Label>Name</Label>
                    <Label>Початок:</Label>
                    <Label>TimeSpan</Label>
                    <Label>Кінець:</Label>
                    <Label>TimeSpan</Label>
                </HorizontalStackLayout>
            </Frame>

            <Frame x:Name="TodayL2" CornerRadius="40" BackgroundColor="#BBA3EF" Margin="20,5,20,0" IsVisible="false">
                <HorizontalStackLayout Spacing="5" x:Name="NextL2">
                    <Label>Name</Label>
                    <Label>Початок:</Label>
                    <Label>TimeSpan</Label>
                    <Label>Кінець:</Label>
                    <Label>TimeSpan</Label>
                </HorizontalStackLayout>
            </Frame>

            <Frame x:Name="TodayL3" CornerRadius="40" BackgroundColor="#BBA3EF" Margin="20,5,20,0" IsVisible="false">
                <HorizontalStackLayout Spacing="5" x:Name="NextL3">
                    <Label>Name</Label>
                    <Label>Початок:</Label>
                    <Label>TimeSpan</Label>
                    <Label>Кінець:</Label>
                    <Label>TimeSpan</Label>
                </HorizontalStackLayout>
            </Frame>

            <Frame x:Name="TodayL4" CornerRadius="40" BackgroundColor="#BBA3EF" Margin="20,5,20,0" IsVisible="false">
                <HorizontalStackLayout Spacing="5" x:Name="NextL4">
                    <Label>Name</Label>
                    <Label>Початок:</Label>
                    <Label>TimeSpan</Label>
                    <Label>Кінець:</Label>
                    <Label>TimeSpan</Label>
                </HorizontalStackLayout>
            </Frame>

            <Frame x:Name="TomorrowLessonsTab" CornerRadius="30" BackgroundColor="#584D6F" HorizontalOptions="Center" Margin="-210,20,0,5" IsVisible="false">
                <Label HorizontalTextAlignment="Center" TextColor="White" Text="Завтра" Margin="0,-15,0,0" />
            </Frame>

            <Frame x:Name="TomL1" CornerRadius="40" BackgroundColor="#BBA3EF" Margin="20,-30,20,0" IsVisible="false">
                <HorizontalStackLayout Spacing="5" x:Name="TomorrowL1">
                    <Label>Name</Label>
                    <Label>Початок:</Label>
                    <Label>TimeSpan</Label>
                    <Label>Кінець:</Label>
                    <Label>TimeSpan</Label>
                </HorizontalStackLayout>
            </Frame>
            <Frame x:Name="TomL2" CornerRadius="40" BackgroundColor="#BBA3EF" Margin="20,5,20,0" IsVisible="false">
                <HorizontalStackLayout Spacing="5" x:Name="TomorrowL2">
                    <Label>Name</Label>
                    <Label>Початок:</Label>
                    <Label>TimeSpan</Label>
                    <Label>Кінець:</Label>
                    <Label>TimeSpan</Label>
                </HorizontalStackLayout>
            </Frame>
            <Frame x:Name="TomL3" CornerRadius="40" BackgroundColor="#BBA3EF" Margin="20,5,20,0" IsVisible="false">
                <HorizontalStackLayout Spacing="5" x:Name="TomorrowL3">
                    <Label>Name</Label>
                    <Label>Початок:</Label>
                    <Label>TimeSpan</Label>
                    <Label>Кінець:</Label>
                    <Label>TimeSpan</Label>
                </HorizontalStackLayout>
            </Frame>
            <Frame x:Name="TomL4" CornerRadius="40" BackgroundColor="#BBA3EF" Margin="20,5,20,0" IsVisible="false">
                <HorizontalStackLayout Spacing="5" x:Name="TomorrowL4">
                    <Label>Name</Label>
                    <Label>Початок:</Label>
                    <Label>TimeSpan</Label>
                    <Label>Кінець:</Label>
                    <Label>TimeSpan</Label>
                </HorizontalStackLayout>
            </Frame>
            <Frame x:Name="TomL5" CornerRadius="40" BackgroundColor="#BBA3EF" Margin="20,5,20,20" IsVisible="false">
                <HorizontalStackLayout Spacing="5" x:Name="TomorrowL5">
                    <Label>Name</Label>
                    <Label>Початок:</Label>
                    <Label>TimeSpan</Label>
                    <Label>Кінець:</Label>
                    <Label>TimeSpan</Label>
                </HorizontalStackLayout>
            </Frame>

        </StackLayout>

    </ScrollView>
    
</ContentPage>
